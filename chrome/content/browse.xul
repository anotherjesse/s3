<?xml-stylesheet href="chrome://global/skin/global.css" type="text/css"?>
<?xml-stylesheet href="chrome://s3/skin/style.css" type="text/css"?>

<page xmlns:html="http://www.w3.org/1999/xhtml"
      xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <script type="application/x-javascript" src="chrome://browser/content/utilityOverlay.js"/>
  <script type="application/x-javascript" src="chrome://global/content/nsDragAndDrop.js"></script>
  <script type="application/x-javascript" src="chrome://s3/content/S3Ajax.js"></script>
  <script type="application/x-javascript" src="chrome://s3/content/dnd.js"></script>
  <script type="application/x-javascript" src="chrome://s3/content/uploader.js"></script>
  <script type="application/x-javascript" src="chrome://s3/content/browse.js"></script>

  <menupopup id="test">
    <menuitem label="Copy Public URL" accesskey="c" onclick="copyHTTP()" />
    <menuitem label="Copy Signed URL (5 minutes)" accesskey="s" onclick="copySIGNED()" />
    <menuitem label="Save As" accesskey="a" onclick="saveAs()" />
    <menuitem label="Properties" accesskey="p" onclick="showProperties()" />
    <menuseparator />
    <menuitem label="Delete" accesskey="d" onclick="showDelete()" />
  </menupopup>

  <hbox id="header">
    <hbox id="location">
      <label value="s3://" class="text-link s3" href="s3://" />
    </hbox>
    <spacer flex="1" />
    <button label="upload" id="upload" onclick="fm.upload()" />
  </hbox>

  <vbox id="active" flex="1" />

  <vbox id="uploads" hidden="true">
    <hbox>
      <vbox>
        <image src="chrome://s3/skin/big-spinner.gif" />
        <spacer flex="1" />
      </vbox>
      <vbox>
        <hbox>
          <label id="status" value="Uploading" />
          <progressmeter
             id="uploadstatus"
             mode="determined"
             value="0"/>
        </hbox>
        <label id="queue"  value="6 of 5" />
      </vbox>
    </hbox>
  </vbox>

</page>
