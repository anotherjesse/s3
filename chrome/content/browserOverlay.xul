<?xml-stylesheet type="text/css" href="chrome://s3/skin/toolbarbutton.css"?>

<overlay id="s3Overlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <menupopup id="menu_ToolsPopup">
    <menuitem id="s3-base-menuitem"
            oncommand="openUILink('s3:///', event, false, true);"
            onclick="checkForMiddleClick(this, event);"
            label="Open S3"/>
  </menupopup>

  <menupopup id="viewSidebarMenu">
    <menuitem observes="viewS3Sidebar" label="S3 Sidebar" />
  </menupopup>
  
  <broadcasterset id="mainBroadcasterSet"> 
    <broadcaster id="viewS3Sidebar" 
                 label="S3 Sidebar"
                 autoCheck="false"
                 type="checkbox"
                 group="sidebar"
                 sidebarurl="chrome://s3/content/sidebar.html"
                 sidebartitle="S3 Sidebar"
                 oncommand="toggleSidebar('viewS3Sidebar');" />
  </broadcasterset>
</overlay>
